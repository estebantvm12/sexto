<body>

    <h1> Registro de Asistencia</h1>

    <input type="text" id="nombre" placeholder="Nombre del aprendiz">
    <select id="estado">
        <option value="Asisti贸">Asisti贸</option>
        <option value="No asisti贸">No asisti贸</option>
    </select>
    <br><br>
    <button onclick="registrar()">Registrar</button>

    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Asistencia</th>
                <th>Acci贸n</th>
            </tr>
        </thead>
        <tbody id="tabla"></tbody>
    </table>

    <script>
        function registrar() {
            const nombre = document.getElementById("nombre").value;
            const estado = document.getElementById("estado").value;

            if (nombre === "") {
                alert("Ingrese un nombre");
                return;
            }

            const tabla = document.getElementById("tabla");
            const fila = document.createElement("tr");

            fila.innerHTML = `
                <td>${nombre}</td>
                <td>${estado}</td>
                <td><button onclick="this.parentElement.parentElement.remove()">Eliminar</button></td>
            `;

            tabla.appendChild(fila);
            document.getElementById("nombre").value = "";
        }
    </script>

